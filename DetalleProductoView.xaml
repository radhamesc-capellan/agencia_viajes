<UserControl
    x:Class="Proyecto_Interfaces.DetalleProductoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <DropShadowEffect
            x:Key="CardShadow"
            BlurRadius="12"
            Opacity="0.2"
            ShadowDepth="3"
            Color="#000000" />


        <Style x:Key="ReservarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Width" Value="120" />
            <Setter Property="Margin" Value="10,15,0,0" />
            <Setter Property="Background" Value="#E76F51" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D45A3F" />
                                <Setter Property="FontSize" Value="16" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="ComprarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Width" Value="120" />
            <Setter Property="Margin" Value="10,15,0,0" />
            <Setter Property="Background" Value="#2A9D8F" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D7A6F" />
                                <Setter Property="FontSize" Value="16" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer Margin="0,0,0,10" VerticalScrollBarVisibility="Hidden">
        <StackPanel>

            <Border
                Margin="0,0,0,20"
                Background="White"
                CornerRadius="8"
                Effect="{StaticResource CardShadow}">
                <Grid Height="400">
                    <Border ClipToBounds="True" CornerRadius="8">
                        <Image
                            x:Name="ImagenPrincipal"
                            Source="/Assets/Ejemplo.jpg"
                            Stretch="UniformToFill" />
                    </Border>
                </Grid>
            </Border>


            <Border
                Margin="0,0,0,20"
                Background="White"
                CornerRadius="8"
                Effect="{StaticResource CardShadow}">
                <StackPanel Margin="15">
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#2A9D8F"
                        Text="Galería de imágenes" />
                    <WrapPanel x:Name="GaleriaImagenesPanel" Orientation="Horizontal" />
                </StackPanel>
            </Border>


            <Border
                Margin="0,0,0,20"
                Background="White"
                CornerRadius="8"
                Effect="{StaticResource CardShadow}">
                <StackPanel Margin="25">
                    <TextBlock
                        x:Name="TituloLabel"
                        Margin="0,0,0,10"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="#2A9D8F"
                        Text="Título del producto" />
                    <TextBlock
                        x:Name="DescripcionLabel"
                        Margin="0,0,0,20"
                        FontSize="14"
                        Text="Descripción del producto..."
                        TextWrapping="Wrap" />
                    <TextBlock
                        x:Name="PrecioLabel"
                        Margin="0,0,0,15"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="Black"
                        Text="Precio: €120.00" />


                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <Button
                            x:Name="ReservarButton"
                            Click="OnReservarClick"
                            Content="Reservar"
                            Style="{StaticResource ReservarButtonStyle}" />
                        <Button
                            x:Name="ComprarButton"
                            Click="OnComprarClick"
                            Content="Comprar"
                            Style="{StaticResource ComprarButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>