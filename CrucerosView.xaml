                        </Grid.RowDefinitions>
                        <Border ClipToBounds="True" CornerRadius="6">
                            <Image
                                Margin="8,8,8,8"
                                Source="/Assets/Cruceros/crucero2.jpg"
                                Stretch="UniformToFill" />
                        </Border>
                        <StackPanel Grid.Row="1" Margin="15">
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="Norte de Europa" />
                            <TextBlock
                                Margin="0,4"
                                Foreground="#555"
