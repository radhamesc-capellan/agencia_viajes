                    </StackPanel>
                </Border>
                <Border
                    Margin="6"
                    Background="White"
                    CornerRadius="8"
                    Effect="{StaticResource CardShadow}"
                    MouseLeftButtonDown="OnCardClick">
                    <StackPanel Margin="8">
                        <Border
                            Height="110"
                            ClipToBounds="True"
                            CornerRadius="6">
