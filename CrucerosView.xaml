                            Text="12 días • Lujo y playas"
                            TextWrapping="Wrap" />
                        <WrapPanel Margin="0,8,0,0">
                            <Button
                                Width="78"
                                Height="26"
                                Click="OnViewDetailsClick"
                                Content="Ver"
