                                Click="OnReserveClick"
                                Content="Reservar"
                                FontSize="11"
                                Style="{StaticResource ReservarButtonStyle}" />
                        </WrapPanel>
                    </StackPanel>
                </Border>
                <Border
                    Margin="6"
                    Background="White"
                    CornerRadius="8"
                    Effect="{StaticResource CardShadow}"
                    MouseLeftButtonDown="OnCardClick">
                    <StackPanel Margin="8">
