                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Border ClipToBounds="True" CornerRadius="6">
                            <Image
                                Margin="8,8,8,8"
                                Source="/Assets/Viajes/Viaje2.jpg"
                                Stretch="UniformToFill" />
                        </Border>
                        <StackPanel Grid.Row="1" Margin="15">
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="Ruta del Camino de Santiago" />
                            <TextBlock
                                Margin="0,4"
                                Foreground="#555"
                                Text="7 días • Últimos 100 km • Albergues y certificado"
                                TextWrapping="Wrap" />
                            <WrapPanel Margin="0,12,0,0">
                                <Button
                                    Click="OnViewDetailsClick"
