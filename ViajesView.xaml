            <UniformGrid Columns="4" Rows="1">
                <Border
                    Margin="6"
                    Background="White"
                    CornerRadius="8"
                    Effect="{StaticResource CardShadow}"
                    MouseLeftButtonDown="OnCardClick">
                    <StackPanel Margin="8">
                        <Border
