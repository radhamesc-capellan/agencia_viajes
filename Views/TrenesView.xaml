<UserControl
    x:Class="Proyecto_Interfaces.Views.TrenesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <DropShadowEffect
            x:Key="CardShadow"
            BlurRadius="12"
            Opacity="0.2"
            ShadowDepth="3"
            Color="#000000" />


        <DropShadowEffect
            x:Key="StrongerCardShadow"
            BlurRadius="16"
            Opacity="0.25"
            ShadowDepth="4"
            Color="#000000" />


        <Style x:Key="ReservarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Width" Value="120" />
            <Setter Property="Margin" Value="10,15,0,0" />
            <Setter Property="Background" Value="#E76F51" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D45A3F" />
                                <Setter Property="FontSize" Value="16" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="ComprarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Width" Value="120" />
            <Setter Property="Margin" Value="10,15,0,0" />
            <Setter Property="Background" Value="#2A9D8F" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D7A6F" />
                                <Setter Property="FontSize" Value="16" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="30" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Padding" Value="8,0" />
            <Setter Property="Margin" Value="0,5" />
        </Style>


        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Height" Value="30" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Margin" Value="0,5" />
        </Style>
    </UserControl.Resources>

    <ScrollViewer Margin="0,0,0,10" VerticalScrollBarVisibility="Hidden">
        <StackPanel>

            <Border
                Margin="0,0,0,25"
                Background="White"
                CornerRadius="8"
                Effect="{StaticResource CardShadow}">
                <Grid Height="320" Margin="8">
                    <Border ClipToBounds="True" CornerRadius="8">
                        <Image Source="/Assets/Trenes/bannerTrenes.jpg" Stretch="UniformToFill" />
                    </Border>
                    <Border Background="#44000000" CornerRadius="8" />
                    <TextBlock
                        Margin="30,0,0,20"
                        VerticalAlignment="Bottom"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Trenes en España: Cómodos, Rápidos y Ecológicos" />
                </Grid>
            </Border>


            <Border
                Margin="0,0,0,30"
                Background="White"
                CornerRadius="8"
                Effect="{StaticResource CardShadow}">
                <Grid Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>


                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="#2A9D8F"
                                Text="Tipo de tren:" />
                            <ComboBox
                                x:Name="TipoTrenComboBox"
                                SelectedIndex="0"
                                SelectionChanged="OnTipoTrenChanged"
                                Style="{StaticResource ComboBoxStyle}">
                                <ComboBoxItem Content="AVE" />
                                <ComboBoxItem Content="Alvia" />
                                <ComboBoxItem Content="Renfe" />
                                <ComboBoxItem Content="Media Distancia" />
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="#2A9D8F"
                                Text="Destino:" />
                            <ComboBox
                                x:Name="DestinoComboBox"
                                SelectedIndex="0"
                                SelectionChanged="OnDestinoChanged"
                                Style="{StaticResource ComboBoxStyle}">
                                <ComboBoxItem Content="Madrid - Barcelona" />
                                <ComboBoxItem Content="Madrid - Sevilla" />
                                <ComboBoxItem Content="Barcelona - Valencia" />
                            </ComboBox>
                        </StackPanel>
                    </Grid>


                    <Grid Grid.Row="1" Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="#2A9D8F"
                                Text="Fecha:" />
                            <DatePicker
                                x:Name="FechaDatePicker"
                                SelectedDate="{Binding CurrentDate, Mode=TwoWay}"
                                SelectedDateFormat="Short"
                                Style="{StaticResource DatePickerStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="#2A9D8F"
                                Text="Hora del tren:" />
                            <ComboBox x:Name="HoraTrenComboBox" Style="{StaticResource ComboBoxStyle}">
                                <ComboBoxItem Content="08:00" />
                                <ComboBoxItem Content="10:30" />
                                <ComboBoxItem Content="13:00" />
                                <ComboBoxItem Content="16:45" />
                                <ComboBoxItem Content="19:30" />
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>


            <Border
                Background="#F9F9F9"
                CornerRadius="8"
                Effect="{StaticResource StrongerCardShadow}">

                <Grid Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>


                    <TextBlock
                        x:Name="PrecioLabel"
                        Margin="10,-12,-10,22"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="Black"
                        Text="Precio total: €120.00" />
                    <TextBlock
                        x:Name="PrecioReservaLabel"
                        Grid.RowSpan="2"
                        Margin="10,12,-10,0"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="#888888"
                        Text="Reserva (30%): €36.00" />


                    <StackPanel
                        Grid.Row="2"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <Button
                            x:Name="ReservarButton"
                            Click="OnReservarClick"
                            Content="Reservar"
                            Style="{StaticResource ReservarButtonStyle}" />
                        <Button
                            x:Name="ComprarButton"
                            Click="OnComprarClick"
                            Content="Comprar"
                            Style="{StaticResource ComprarButtonStyle}" />
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>